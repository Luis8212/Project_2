<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Question4">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Question 4"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="20dp" />


    // textview for the question
    <TextView
        android:id="@+id/textView3"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:text="Last day for you taxes?"
        android:textColor="@color/teal_200"
        android:textSize="20dp" />

    // radio group for the answers
    <RadioGroup
        android:id="@+id/radiogroupfourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp">

        <RadioButton
            android:id="@+id/radioButton41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="November 14"
            />

        <RadioButton
            android:id="@+id/radioButton42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 9"
            />

        <RadioButton
            android:id="@+id/radioButton43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="March 20"
            />

        <RadioButton
            android:id="@+id/radioButton44"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:text="April 18" />

    </RadioGroup>
    // space to separate the button
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    // button to check if the answer is correct
    <Button
        android:id="@+id/btnfourth"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="Submit" />

</LinearLayout>