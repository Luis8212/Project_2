<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Question2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Question 2"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="20dp" />


    // textview for the question
    <TextView
        android:id="@+id/textView3"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:text="When is Independance day?"
        android:textColor="@color/teal_200"
        android:textSize="20dp" />

    // radio group for the answers
    <RadioGroup
        android:id="@+id/radiogroupsecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp">

        <RadioButton
            android:id="@+id/radioButton21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="July 4"
            />

        <RadioButton
            android:id="@+id/radioButton22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 23"
            />

        <RadioButton
            android:id="@+id/radioButton23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="March 3"
            />

        <RadioButton
            android:id="@+id/radioButton24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="July 24"
            />

    </RadioGroup>
    // space to separate the button
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    // button to check if the answer is correct
    <Button
        android:id="@+id/btnsecond"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="Submit" />

</LinearLayout>