<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Question1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Question 1"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="20dp" />


    // textview for the question
    <TextView
        android:id="@+id/textView3"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:text="What is the capital of the United States?"
        android:textColor="@color/purple_700"
        android:textSize="20dp" />

    // radio group for the answers
    <RadioGroup
        android:id="@+id/radiogroupfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albany"
            />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York"
            />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Washington D.C"
            />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="California"
            />

    </RadioGroup>
    // space to separate the button
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    // button to check if the answer is correct
    <Button
        android:id="@+id/btnfirst"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="Submit" />


</LinearLayout>